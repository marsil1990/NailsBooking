<% if (title) { %>
    <h1>
        <%= title %>
    </h1>

    <% } %>

        <section class="booking">
            <form class="booking-form" action="/appointment/book" method="post">


                <label for="email">Ingresa tu correo:</label>
                <input type="email" id="email" name="account_email" required value="<%= locals.account_email %>"
                    placeholder="Enter a valid email address">

                <label for="date">Fechas y horarios diponibles</label>
                <%- grid %>

                    <button type="submit">Reserva tu lugar</button>
            </form>
        </section>

        <%- messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
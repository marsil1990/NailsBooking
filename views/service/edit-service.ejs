<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } %>

        <%- messages() %>

            <section class="edit-form-container">
                <form id="updateFormUser" class="edit-form" action="/service/update" method="POST"
                    enctype="multipart/form-data">


                    <input type="hidden" id="service_id" name="service_id" required minlength="3"
                        pattern="^[A-Za-z0-9][A-Za-z0-9 \-]{2,}$"
                        title="Mínimo 3 caracteres. Solo letras, números, espacios y guiones."
                        value="<%= locals.service_id  %>" placeholder="Min of 3 Characters">

                    <label for="service_name">Nombre</label>
                    <input id="service_name" name="service_name" required minlength="3"
                        pattern="^[A-Za-z0-9][A-Za-z0-9 \-]{2,}$"
                        title="Mínimo 3 caracteres. Solo letras, números, espacios y guiones."
                        value="<%= locals.service_name || '' %>" placeholder="Min of 3 Characters">

                    <label for="service_description">Description</label>
                    <textarea id="service_description" name="service_description" required minlength="10"
                        placeholder="Brief description (min 10 chars)"
                        rows="4"><%=  locals.service_description  %></textarea>


                    <label for="service_price">Price</label>
                    <input id="service_price" name="service_price" required inputmode="decimal"
                        pattern="^\d+(?:\.\d{1,2})?$" title="Número entero o decimal con punto (ej: 12000 o 12000.99)"
                        value="<%= locals.service_price  %>" placeholder="Decimal or integer">

                    <img src="<%= locals.services_imageurl  %>" alt="Current image" width="100" height="100">
                    <label for="service_new_image">Cambiar la Imagen</label>
                    <input id="service_new_image" name="service_new_image" type="file"
                        accept="image/png,image/jpeg,image/webp">

                    <input type="hidden" name="current_image" value="<%= locals.services_imageurl %>">

                    <p class="images">Optimizar la imagen: 200x200 y menos de 70KB</p>

                    <button id="buttonEdit" type="submit" disabled>Editar Servicio</button>
                </form>
            </section>

            <script src="../../js/buttonForm.js"></script>